<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerminalBotTest.MainPage">

    <ScrollView>
        <StackLayout>
            <VerticalStackLayout x:Name="ControlsPanel" >

                <VerticalStackLayout Margin="32" Padding="8" HorizontalOptions="FillAndExpand">
                    <Entry x:Name="txtCommand" HorizontalOptions="FillAndExpand" />
                    <Button Text="Send" Clicked="SendCommandClicked"/>
                    <Button Text="Send Test" Clicked="SendTestCommandClicked"/>
                </VerticalStackLayout>

            </VerticalStackLayout>

            <VerticalStackLayout VerticalOptions="Start" Margin="8" HorizontalOptions="Center">
                <Label x:Name="DeviceLabel" />
            </VerticalStackLayout>

            <VerticalStackLayout VerticalOptions="Start" Margin="32">
                <Button Text="Selecionar dispositivo" Clicked="SwitchDeviceClickedAsync"/>
            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
